{{> header}}
{{> navbar}}
<div class="container">
    <h1 class="title">Pintores</h1>
    {{#if pintores}}
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Nacionalidad</th>
                    <th>Corriente</th>
                    <th>Pintura</th>
                </tr>
            </thead>
            <tbody>
            {{#each pintores}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{nombre}}</td>
                    <td>{{nacionalidad}}</td>
                    <td>{{corriente}}</td>
                    <td><img width="50%" src="../images/{{pintura}}"/></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>No se encuentran pintores</div>
    {{/if}}
</div>

<br> <br> <br>
{{> footer}}